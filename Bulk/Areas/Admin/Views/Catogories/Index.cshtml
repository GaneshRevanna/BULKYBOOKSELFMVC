@model List<Catogiries>
@if(TempData["success"]!=null)
{
    <h2>@TempData["success"]</h2>
}
@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" /> *@
<div class="container">
<div class="row pt-4 pb-3">
<div class="col-6">
    <h2 class="primary-text">Catogories List</h2>
</div>
<div class="col-6 text-end">
            <a asp-controller="Catogories" asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus"></i> Create new catogiries
    </a>
</div>
</div>
</div>

<table class=" table table-striped table-bordered  table-lg">
    <thead>
        <tr>
            <th>ID</th>
             <th>Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
   
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.id</td>
                <td>@obj.Name</td>
                <td>@obj.displayorder</td>
                <td >
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary btn-lg mx-2" asp-controller="Catogories" asp-action="Edit" asp-route-id="@obj.id">
                            <i class="bi bi-pencil-square" ></i>Edit
                        </a>
                        <a class="btn btn-danger btn-lg mx-2" asp-controller="Catogories" asp-action="Delete" asp-route-id="@obj.id">
                            <i class="bi bi-archive-fill"></i>Delete
                        </a>
                    </div>
                </td>
                
            </tr>
        }
    </tbody>
</table>