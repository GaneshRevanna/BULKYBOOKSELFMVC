@* <h1>Delete existing Products</h1> *@
@model Product
<form method="post">
    <input asp-for="Id" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input disabled asp-for="Title" class="form-control">

        </div>
        <div class="mb-3">
            <label asp-for="author"></label>
            <input disabled asp-for="author" class="form-control">

        </div>
        <div class="row">
            <div class="col-6 col-md-3 ">
                <button class=" btn btn-danger btn-lg form-control" type="submit">Delete</button>
            </div>
            <div class="col-6 col-md-3 ">
                <a class="btn btn-secondary btn-lg  form-control" asp-controller="Product" asp-action="Index"> Back To List</a>


            </div>
        </div>
    </div>
</form>
